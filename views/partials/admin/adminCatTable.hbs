<section>


    <h2>Crear nueva</h2>
    <form method="POST" action="/admin/cat/new">
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>SubCategoria</th>
                    <th>SubCategoria ID</th>
                    <th>Clasificacion</th>
                    <th>Clasificacion ID</th>
                    <th>Acciones</th>


                </tr>
            </thead>
            <tbody id="solucionesTable">
                <tr>
                    <input id="subcategoriaLast" value={{categorias.[0].SubcategoriaId}} hidden></input>
                    <td> <input name="id" value="{{_id}}" hidden /> {{_id}} </td>
                    <td><input class="form-control form-control-sm" type="text" name="Nombre"> </input></td>
                    <td><input id="SubcategoriaId" class="form-control form-control-sm" type="Number"
                            name="SubcategoriaId" /> </td>
                    <td><input class="form-control form-control-sm" type="text" name="CategoriaNombre"></input></td>
                    <td><input class="form-control form-control-sm" type="Number" name="CategoriaId"></input></td>
                    <td>
                        <script>
                            const subcatLast = document.getElementById("subcategoriaLast").value
                            document.getElementById("SubcategoriaId").value = parseInt(subcatLast) + 1
                        </script>

                        <button type="submit" class="btn btn-outline-success btn-sm">Guardar</button>
                    </td>

                </tr>
            </tbody>
        </table>

    </form>

</section>

<section>
    <h2>Lista de Categorias</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>SubCategoria</th>
                    <th>SubCategoria ID</th>
                    <th>Clasificacion</th>
                    <th>Clasificacion ID</th>
                    <th>Acciones</th>


                </tr>
            </thead>
            <tbody id="solucionesTable">

                {{#each categorias}}
                <form method="POST" action="/admin/cat/save">
                    <tr>
                        <input name="id" value={{_id}} hidden />
                        <td> {{_id}} </td>
                        <td><input class="form-control form-control-sm" type="text" name="Nombre"
                                value="{{Nombre}}"></input></td>
                        <td><input class="form-control form-control-sm" type="text" name="SubcategoriaId"
                                value="{{SubcategoriaId}}"></input></td>
                        <td><input class="form-control form-control-sm" type="text" name="CategoriaNombre"
                                value="{{CategoriaNombre}}"></input></td>
                        <td><input class="form-control form-control-sm" type="text" name="CategoriaId"
                                value="{{CategoriaId}}"></input></td>
                        <td>
                            <button type="button" class="btn btn-outline-danger btn-sm"
                                onclick="mostrarModalBorrar('{{_id}}')">X</button>
                            <button type="submit" class="btn btn-outline-success btn-sm">G</button>
                        </td>

                    </tr>
                </form>
                {{/each}}

            </tbody>
        </table>

    </div>
</section>

<!-- Modal de confirmación para eliminar -->
<div class="modal" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Confirmar eliminación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que quieres eliminar este documento?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"
                    id="cancelarBorrar">Cancelar</button>
                <button type="button" class="btn btn-danger" id="borrarDocumento">Borrar</button>
            </div>
        </div>
    </div>
</div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<script>

    function mostrarModalBorrar(id) {
        // Mostrar el modal de confirmación de borrado
        document.getElementById('confirmModal').style.display = 'block';

        // Configurar el botón de borrar para eliminar el documento
        document.getElementById('borrarDocumento').addEventListener('click', function () {
            console.log("delete", id);
            fetch("/admin/cat/delete/" + id, {
                method: 'DELETE' // Specify the DELETE method
            })
                .then(response => {
                    if (response.status === 200) {
                        // Document successfully deleted
                        console.log("Document deleted");
                        // Redirect to the "/admin/categorias" page
                        window.location.href = "/admin/categorias";
                    } else {
                        // Error occurred while deleting the document
                        console.error("Error deleting document");
                        // Handle the error or display an error message to the user
                    }
                })
                .catch(error => {
                    console.error(error);
                    // Handle the error or display an error message to the user
                });

            // Cerrar el modal de confirmación
            document.getElementById('confirmModal').style.display = 'none';
        });

        // Configurar el botón de cancelar para cerrar el modal sin borrar el documento
        document.getElementById('cancelarBorrar').addEventListener('click', function () {
            window.location.href = "/admin/categorias";
        });
    }


</script>