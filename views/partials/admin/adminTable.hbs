<div class="table-responsive">
    <table class="table table-striped table-hover ">
        <thead>
            <tr>

                <th>ID</th>
                <th>Solucion ID</th>
                <th>Nombre</th>
                <th>Clasificacion</th>
                <th>Fecha Creacion</th>
                <th>Orden</th>
                <th>Categorias</th>
                <th>Visible</th>
                <th>Acciones</th>

            </tr>
        </thead>
        <tbody id="solucionesTable">

            {{#each soluciones}}
            <form method="POST" action="/admin/save">
                <tr>
                    <input name="id" value={{id}} hidden>
                    <td>{{id}}</td>
                    <td>{{SolucionId}}</td>
                    <td>{{Nombre}}</td>
                    <td> <select name="Clasificacion" class="form-control">
                            <option name="Clasificacion" value="{{Clasificacion}}">{{Clasificacion}}</option>
                            <option name="Clasificacion" value="Solucion">Solucion</option>
                            <option name="Clasificacion" value="Equipo">Equipo</option>
                        </select></td>

                    <td>{{createdAt}}</td>
                    <td><input name="Orden" class="form-control form-control-sm" value={{Orden}} />
                    </td>
                    <td>{{catNumber}} </td>
                    <td>
                        <div style="display:block; height: 10px;width:auto;object-fit:contain">
                            <label class="switch">
                                <input id="sw-{{id}}" name="Oculto" value="{{Oculto}}" type="checkbox" {{Oculto}}>

                                <span class="slider round"></span>
                            </label>
                        </div>
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-danger btn-sm"
                            onclick="mostrarModalBorrar('{{_id}}')">X</button>
                        <a href="/admin/{{_id}}"><button type="button"
                                class="btn btn-outline-primary btn-sm">E</button></a>
                        <button type="submit" class="btn btn-outline-success btn-sm">G</button>
                    </td>

                </tr>
            </form>
            {{/each}}

        </tbody>
    </table>

</div>

<!-- Modal de confirmación para eliminar -->
<div class="modal" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Confirmar eliminación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que quieres eliminar este documento?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"
                    id="cancelarBorrar">Cancelar</button>
                <button type="button" class="btn btn-danger" id="borrarDocumento">Borrar</button>
            </div>
        </div>
    </div>
</div>
</div>
<!-- Formulario para agregar o editar un documento -->


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<script>
    // Configuración del formulario y la tabla
    function mostrarFormulario() {
        document.getElementById('formTitle').textContent = 'Agregar nuevo documento';
        document.getElementById('solucionForm').style.display = 'block';
    }

    function editarDocumento(id) {
        // Obtener el documento por su ID desde el servidor y cargar los datos en el formulario
        document.getElementById('formTitle').textContent = 'Editar documento';
        document.getElementById('solucionForm').style.display = 'block';
    }

    function mostrarModalBorrar(id) {
        // Mostrar el modal de confirmación de borrado
        document.getElementById('confirmModal').style.display = 'block';

        // Configurar el botón de borrar para eliminar el documento
        document.getElementById('borrarDocumento').addEventListener('click', function () {
            console.log("delete", id)
            fetch("/admin/delete/" + id, {
                method: 'DELETE' // Specify the DELETE method
            })
                .then(response => {
                    if (response.ok) {
                        // Document successfully deleted
                        console.log("Document deleted");
                        // Perform any additional actions if needed
                    } else {
                        // Error occurred while deleting the document
                        console.error("Error deleting document");
                        // Handle the error or display an error message to the user
                    }
                })
                .catch(error => {
                    console.error(error);
                    // Handle the error or display an error message to the user
                });

            // Cerrar el modal de confirmación
            document.getElementById('confirmModal').style.display = 'none';
        });

        // Configurar el botón de cancelar para cerrar el modal sin borrar el documento
        document.getElementById('cancelarBorrar').addEventListener('click', function () {
            // Cerrar el modal de confirmación
            document.getElementById('confirmModal').style.display = 'none';
        });
    }


</script>