<section id="collapsive">
    <div class="row p-4">
        <div class="col-sm-5" id="img-col">
            <img src="/images/industry.png" alt="imagen-industria" />
        </div>
        <div class="col-sm-7 pl-5" id="solutions">
            <img class="cross" src="/images/cross2.png" alt="imagen-decorativa" />
            <h1 class="px-2">
                <a target="_blank" href="/soluciones">
                    <i style="font-size: 2.2rem" class="pr-2 fas fa-search-plus"></i>
                    SOLUCIONES
                </a>
            </h1>
            <div class="px-6" id="accordion">
                <div class="card mb-3">
                    <div class="input-group">
                        <input type="text" class="form-control pl-3" id="BuscarEquipamiento"
                            placeholder="Buscar equipamiento" />

                        <div class="input-group-append">
                            <button class="btn px-3 btn-outline-secondary" onclick="BuscarSoluciones2()" type="button">

                                <i class="fa fa-search"></i>
                            </button>

                        </div>

                    </div>

                </div>



                {{#each categorias}}

                <div class="card mb-3 px-3 py-1" id="elementoCard{{@index}}">
                    <h5 id="elementoH5{{@index}}" class="mb-0"><button class="btn btn-link collapsed"
                            data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false"
                            aria-controls="collapseTwo"><a href=" /soluciones">
                                Busqueda por
                                {{NombreCategoria}}</a></button></h5>
                </div>

                {{/each}}

            </div>
        </div>
    </div>

</section>